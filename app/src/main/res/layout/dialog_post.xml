<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="176dp">
        <TextView
            android:id="@+id/kindofpost"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="What kind of post?"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingStart="55dp"
            android:paddingTop="6dp"
            />
        <TextView
            android:id="@+id/normal_post"
            android:layout_below="@+id/kindofpost"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Normal"
            android:paddingStart="120dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/text_changecolor"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/reports_post"
            android:clickable="true"
            android:layout_below="@+id/normal_post"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="18sp"
            android:paddingStart="120dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/text_changecolor"
            android:text="Report"/>
        <TextView
            android:id="@+id/emergency_post"
            android:clickable="true"
            android:layout_below="@id/reports_post"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingStart="105dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@drawable/text_changecolor"
            android:text="Emergency"/>
        
    </RelativeLayout>

</RelativeLayout>