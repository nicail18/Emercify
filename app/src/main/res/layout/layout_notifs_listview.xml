<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notif_list_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/duterte"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/grey"/>

        <!--<ImageView-->
            <!--android:id="@+id/notif_list_item"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->

            />

        <TextView
            android:id="@+id/notif_text_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notif_list_item"
            android:text="PAKYUPITS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notif_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notif_list_item"
            android:layout_below="@+id/notif_text_name"
            android:layout_marginLeft="10dp"
            android:text="has reported an incident!"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notif_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notif_list_item"
            android:layout_below="@id/notif_text_desc"
            android:layout_marginLeft="10dp"
            android:text="7 hours ago"/>

    </RelativeLayout>



</RelativeLayout>