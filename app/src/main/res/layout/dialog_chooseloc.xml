<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/solidcolorrel2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/pearl_white">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/emer" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/solidcolorrel2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/please_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It seems your photo don't have a location tagged. Please choose a location"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/current_locimg"
            android:layout_below="@+id/please_choose"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/current_location"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_currentloc"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:id="@+id/current_location"
            android:layout_below="@+id/please_choose"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/text_changecolor"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/search_locimg"
            android:layout_below="@+id/current_location"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/search_location"
            android:src="@mipmap/ic_searchloc"
            android:layout_marginEnd="6dp"/>
        <TextView
            android:id="@+id/search_location"
            android:layout_below="@+id/current_location"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for a location"
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/text_changecolor"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>