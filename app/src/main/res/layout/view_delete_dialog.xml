<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/solidcolorrel1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/pearl_white">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/emer" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/solidcolorrel1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/reldialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/viewrel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/view_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@mipmap/ic_view_post"/>
            <TextView
                android:id="@+id/view_text"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_toEndOf="@+id/view_image"
                android:layout_marginStart="20dp"
                android:textColor="@drawable/text_changecolor"
                android:fontFamily="sans-serif-condensed"
                android:text="View"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/savephotorel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewrel"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ic_download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:background="@mipmap/ic_save_image"/>
            <TextView
                android:id="@+id/download_text"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ic_download"
                android:textColor="@drawable/text_changecolor"
                android:text="Save Photo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deleterel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savephotorel"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ic_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_delete_post"/>
            <TextView
                android:id="@+id/delete_text"
                android:clickable="true"
                android:textColor="@drawable/text_changecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ic_delete"
                android:text="Delete"/>

        </RelativeLayout>

     </RelativeLayout>

</RelativeLayout>