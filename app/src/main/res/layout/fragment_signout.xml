<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/solidcolorrel2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/pearl_white">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/emer" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/solidcolorrel2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/tvConfirmSignout"
            android:text="You are leaving Emercify!
We hope to see you again!"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:id="@+id/btnConfirmSignout"
            android:layout_below="@+id/tvConfirmSignout"
            android:background="@drawable/rounded_border_blue"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>